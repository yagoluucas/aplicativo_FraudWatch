<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textViewForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="editTextForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/input_custom</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="inputTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/input_custom</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="primaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="homeTituloSecao">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/cor_principal</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="conteinerUltimosProcedimentos">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/background_container_home</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">290dp</item>
    </style>

    <style name="conteinerUltimosProcedimentosTitulo">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="conteinerUltimosProcedimentosDescricao">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">#525252</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:maxLines">5</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="containerProcedimentoRecusado">
        <item name="android:textColor">#D3180C</item>
        <item name="android:background">@drawable/background_procedimento_recusado</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="containerProcedimentoAceito">
        <item name="android:textColor">#198155</item>
        <item name="android:background">@drawable/background_procedimento_aceito</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    
    <style name="dicasEvitarFraudeTitulo">
        <item name="android:textSize">18sp</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:titleMarginBottom">5dp</item>
        <item name="android:drawableEnd">@drawable/plus</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dicasEvitarFraudeDescricao">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tituloPrincipalPagina">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/cor_principal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="descricaoPrincipalPagina">
        <item name="android:lineHeight">24dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="dicasFraudesConteinerTexto">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
</resources>